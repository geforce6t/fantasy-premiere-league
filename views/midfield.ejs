<p class="text-center mt-2 mb-4 title">
    Midfielders

</p>
<%  for (x=0; x <1000 ; x++) { %>

    <div id='midfield<%= x %>' class="player-card card text-center col-md-3 mt-5" style="background-image: url(https://media.futview.com/common/cards/fifa20/potm_epl%402x.png);">
        <b><%= player[x].Name %></b><br>
        <hr>
        <div class="cont">
            <p style="display: inline;">Rating</p>
            <p id="midfield_rating<%= x %>" style="display: inline;">
                <%= player[x].Rating %>
            </p>
            <br>
            <p id="midfield_Club<%= x %>">
                <%= player[x].Position %>
            </p>
        </div>
        <hr>
        <p style="display: inline;">Shooting</p>
        <p id="midfield_Shooting<%= x %>" style="display: inline;">
            <%= player[x].Shooting %>
        </p>
        <p style="display: inline;">Passing</p>
        <p id="midfield_Passing<%= x %>" style="display: inline;">
            <%= player[x].Passing %>
        </p>
        <p style="display: inline;">Dribbling</p>
        <p id="midfield_Dribbling<%= x %>" style="display: inline;">
            <%= player[x].Dribbling %>
        </p><br>
        <p style="display: inline;">Defending</p>
        <p id="midfield_Defending<%= x %>" style="display: inline;">
            <%= player[x].Defending %>
        </p> <br> Price
        <%= player[x].Price %>

            <form action="" onSubmit="return confirm('Do you want to buy this player? ') " method="post">
                <input type="text" name="name" value="<%= player[x].Name %>" style="display: none;">
                <input type="text" name="rating" value="<%= player[x].Rating %>" style="display: none;">
                <input type="text" name="position" value="<%= player[x].Position %>" style="display: none;">
                <input type="text" name="shooting" value="<%= player[x].Shooting %>" style="display: none;">
                <input type="text" name="dribbling" value="<%= player[x].Dribbling %>" style="display: none;">
                <input type="text" name="defending" value="<%= player[x].Defending %>" style="display: none;">
                <input type="text" name="physical" value="<%= player[x].Phyiscality %>" style="display: none;">
                <input type="text" name="passing" value="<%= player[x].Passing %>" style="display: none;">
                <input type="text" name="club" value="<%= player[x].Club %>" style="display: none;">
                <input type="text" name="country" value="<%= player[x].Country %>" style="display: none;">
                <input type="text" name="popularity" value="<%= player[x].Popularity %>" style="display: none;">
                <input type="text" name="price" value="<%= player[x].Price %>" style="display: none;">
                <input type="text" name="user" value="<%= user.name %>" style="display: none;">
                <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#ara<%= x %>" style="border-radius: 30%;background-color:rgb(134, 24, 24);">BUY</button>
            </form>


    </div>

    <% } %>

        <div style="position: fixed;" class="theone">
            BUDGET <br>
            <%= user.transfer %> <br>
                <a href="/dashboard"><i class="fa fa-home" aria-hidden="true"></i></a>
        </div>

        <script>
            function search(string) {
                window.find(string);
            }

            function test() {
                for (x = 0; x < 1000; x++) {
                    if (+document.getElementById(`midfield_Shooting${x}`).innerHTML.trim() >= $('#val1').val() && +document.getElementById(`midfield_Shooting${x}`).innerHTML.trim() <= $('#val2').val() && +document.getElementById(`midfield_rating${x}`).innerHTML.trim() >= $('#rval1').val() && +document.getElementById(`midfield_rating${x}`).innerHTML.trim() <= $('#rval2').val() && +document.getElementById(`midfield_Dribbling${x}`).innerHTML.trim() >= $('#dval1').val() && +document.getElementById(`midfield_Dribbling${x}`).innerHTML.trim() <= $('#dval2').val()) {
                        document.getElementById(`midfield${x}`).style.display = 'inline-block';
                    } else {
                        document.getElementById(`midfield${x}`).style.display = 'none';
                    }
                }
            }
        </script>