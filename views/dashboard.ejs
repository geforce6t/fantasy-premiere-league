<div class="holding">


    <center>

        <% if (user.leaderboard.length != 0) { %>
            <hr id="topm">
            <center>
                <br>
                <h1>Leaderboard</h1>
            </center>
            <br>
            <table id="leaderboard">
                <tr>
                    <td>NAME</td>
